DROP TABLE CAPEXTVA.CLIENTE CASCADE CONSTRAINTS;

CREATE TABLE CLIENTE (
  CLIENTE_ID   NUMBER,
  NOMBRE       VARCHAR2(500 BYTE),
  CLAVE        VARCHAR2(10 BYTE),
  MAIL         VARCHAR2(1000 BYTE),
  ESTATUS      VARCHAR2(1000 BYTE)
);

BEGIN
  FOR CLIENTE IN 1..10 LOOP
    INSERT INTO CAPEXTVA.CLIENTE (CLIENTE_ID, NOMBRE, CLAVE, MAIL, ESTATUS)
    VALUES (CLIENTE, 'CLIENTE ' || CLIENTE, 'CLIE_' || CLIENTE, 'cliente' || CLIENTE || '@clie.com', 'ACTIVO');
  END LOOP;
  UPDATE CLIENTE SET ESTATUS = 'INACTIVO' WHERE CLIENTE_ID IN (3, 7, 10);
  COMMIT;
END;
